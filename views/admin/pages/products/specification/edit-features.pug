extends ../../../layouts/default.pug
include ../../../mixins/alert.pug
include ../../../mixins/select-tree.pug

block main 
    +alert-success("10000")
    +alert-error("10000")
    if(roleUser.permissions.includes("products_edit"))
        h1(class="col-12 mb-4" style="padding-left:0") Sửa thông số nổi bật
        form(
            action=`${prefixAdmin}/products/specifications/features/edit/${product.id}/${featureSpec.id}/?_method=PATCH`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tên sản phẩm
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    value=product.title
                    readonly
                )
            div(class="form-group")
                label(for="nameFeaturesSpec") Tên thông số
                input(
                    type="text"
                    class="form-control"
                    id="nameFeaturesSpec"
                    name="nameFeaturesSpec"
                    value=featureSpec.nameFeaturesSpec
                    required
                )
            div(class="form-group")
                label(for="valueDefault") Mô tả ngắn
                input(
                    type="text"
                    class="form-control"
                    id="valueDefault"
                    name="valueDefault"
                    value=featureSpec.valueDefault
                    required
                )
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Sửa